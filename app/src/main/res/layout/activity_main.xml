<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tlo">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tlo">

    <CheckBox
        android:id="@+id/check_komp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Komputer"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/check_komp"/>

    <Spinner
        android:id="@+id/spinner_komp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_komp"

        />


    <CheckBox
        android:id="@+id/check_myszka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_komp"/>

    <TextView
        android:text="Myszka"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/check_myszka"
        android:layout_below="@+id/spinner_komp"/>

    <Spinner
        android:id="@+id/spinner_myszka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_myszka"/>

    <CheckBox
        android:id="@+id/check_klawiatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_myszka"/>

    <TextView
        android:text="Klawiatura"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/check_klawiatura"
        android:layout_below="@+id/spinner_myszka"/>

    <Spinner
        android:id="@+id/spinner_klawiatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_klawiatura"/>

    <CheckBox
        android:id="@+id/check_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_klawiatura"/>

    <TextView
        android:text="Monitor"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/check_monitor"
        android:layout_below="@+id/spinner_klawiatura"/>

    <Spinner
        android:id="@+id/spinner_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_monitor"/>

    <TextView
        android:id="@+id/text_cena"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spinner_monitor"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Cena:"/>

    <TextView
        android:id="@+id/cena"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_below="@+id/spinner_monitor"
        android:layout_toRightOf="@+id/text_cena"
        android:text="0"
        />

    <Button
        android:id="@+id/btn_cena"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="OBLICZ CENĘ"
        android:layout_below="@+id/spinner_monitor"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/teltext"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cena"
        android:layout_marginTop="10dp"
        android:text="Nr tel:"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/teledit"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/teltext"
        android:layout_below="@+id/cena"
        />

    <Button
        android:id="@+id/smsbutton"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_cena"
        android:layout_alignParentRight="true"
        android:text="Wyślij SMS"
        />

</RelativeLayout>
</ScrollView>